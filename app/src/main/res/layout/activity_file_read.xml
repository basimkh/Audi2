<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_file_read"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp1.audi.FileRead"
    android:background="@drawable/papar"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:text="OPEN EXISTING FILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btRead" />

    <Button
        android:text="WRITE INTO EXISTING FILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btWrite" />

    <Button
        android:text="READ INTO EXISITING FILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btRead2" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFileContent"
        android:layout_weight="0.08" />
</LinearLayout>
